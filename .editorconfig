root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true

[*.{java,kts}]
indent_style = tab
end_of_line = lf
charset = utf-8
max_line_length = 120
ij_continuation_indent_size = 8
ij_smart_tabs = false

[*.java]
ij_java_imports_layout = java.**,|,javax.**,|,*,|,io.github.vpavic.**,|,$*
ij_java_use_single_class_imports = true
